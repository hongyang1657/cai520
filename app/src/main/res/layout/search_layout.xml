<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/colorCrociOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/ic_back"
            android:id="@+id/img_back"
            android:clickable="true"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:layout_width="70dp"
            android:layout_height="match_parent" />
        <AutoCompleteTextView
            android:layout_weight="1"
            android:id="@+id/et_search"
            android:background="@color/colorCrociOne"
            android:hint="搜索美食"
            android:drawableLeft="@mipmap/search_icon"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <Button
            android:background="@color/colorCrociOne"
            android:text="搜索"
            android:textColor="#f36c21"
            android:textSize="20sp"
            android:id="@+id/bt_search"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:padding="10dp"
        android:text="流行搜索"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:onClick="topick"
            android:text="减肥"
            android:textSize="20sp"
            android:background="#ffffff"
            android:id="@+id/bt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="topick"
            android:id="@+id/bt2"
            android:text="新疆菜"
            android:textSize="20sp"
            android:background="#ffffff"
            android:layout_toRightOf="@id/bt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="topick"
            android:id="@+id/bt3"
            android:text="宵夜"
            android:textSize="20sp"
            android:background="#ffffff"
            android:layout_toRightOf="@id/bt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="topick"
            android:id="@+id/bt4"
            android:text="西餐"
            android:textSize="20sp"
            android:background="#ffffff"
            android:layout_below="@id/bt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="topick"
            android:id="@+id/bt5"
            android:text="水果"
            android:textSize="20sp"
            android:background="#ffffff"
            android:layout_below="@id/bt2"
            android:layout_toRightOf="@id/bt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="topick"
            android:id="@+id/bt6"
            android:text="美容"
            android:textSize="20sp"
            android:background="#ffffff"
            android:layout_below="@id/bt3"
            android:layout_toRightOf="@id/bt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="topick"
            android:id="@+id/bt7"
            android:text="早餐"
            android:textSize="20sp"
            android:background="#ffffff"
            android:layout_below="@id/bt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="topick"
            android:id="@+id/bt8"
            android:text="烤箱"
            android:textSize="20sp"
            android:background="#ffffff"
            android:layout_below="@id/bt4"
            android:layout_toRightOf="@id/bt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:onClick="topick"
            android:id="@+id/bt9"
            android:text="海鲜"
            android:textSize="20sp"
            android:background="#ffffff"
            android:layout_below="@id/bt4"
            android:layout_toRightOf="@id/bt5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>