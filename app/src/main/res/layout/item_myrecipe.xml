<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/my_myrecipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/my_myrecipename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/my_myrecipe"
        android:text="菜名" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="上传时间"
        android:id="@+id/my_myrecipetime"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/my_myrecipe"
        android:layout_below="@id/my_myrecipename"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/my_myrecipe"
        android:text="菜肴描述"
        android:id="@+id/my_myrecipecontent"/>
</RelativeLayout>