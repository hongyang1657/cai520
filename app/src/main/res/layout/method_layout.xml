<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingTop="20dp"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_step_number1"
        android:layout_width="wrap_content"
        android:text="1"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:padding="20dp"/>
    <ImageView
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:onClick="click"
        android:id="@+id/image_step_image1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/take_photo"
        android:layout_toRightOf="@id/tv_step_number1"/>
    <TextView
        android:id="@+id/et_step_content1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="具体的方法"
        android:layout_alignLeft="@id/image_step_image1"
        android:layout_below="@id/image_step_image1"
        android:background="@null"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center"
        android:textSize="16sp"
        android:drawablePadding="10dp" />

</RelativeLayout>