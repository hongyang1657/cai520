<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/share_image"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/share_title"
        android:layout_below="@id/share_image"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/share_title">
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/share_favour"
            android:drawableLeft="@mipmap/favour"
            android:background="@null"
            android:paddingLeft="10dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/share_collec"
            android:drawableLeft="@mipmap/collec"
            android:background="@null"
            android:paddingLeft="10dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/share_share"
            android:drawableLeft="@mipmap/share"
            android:background="@null"
            android:paddingLeft="10dp"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/share_position"
            android:drawableLeft="@mipmap/position"
            android:background="@null"
            android:paddingLeft="10dp"/>
    </LinearLayout>
</RelativeLayout>