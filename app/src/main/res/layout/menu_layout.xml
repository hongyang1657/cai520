<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/image_head"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/take_photo" />
        <TextView
            android:id="@+id/menu_name"
            android:text="菜谱名称"
            android:padding="20dp"
            android:gravity="center"
            android:textSize="26sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="20dp"
            android:id="@+id/menu_abstract"
            android:textSize="16sp"
            android:lineSpacingExtra="5dp"
            android:text="菜谱简介菜谱简介菜谱简介菜谱简介菜谱简介菜谱简介菜谱简介菜谱简介菜谱简介菜谱简介菜谱简介菜谱简介菜谱简介菜谱简介菜谱简介"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@mipmap/ic_launcher"
            android:padding="5dp"
            android:gravity="center"
            android:id="@+id/user_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
        android:text="用户名"
        android:gravity="center"
        android:padding="5dp"
        android:id="@+id/uesr_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
        <TextView
            android:text="创建时间"
            android:gravity="center"
            android:padding="5dp"
            android:id="@+id/uesr_create_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="10dp"
            android:text="用料"
            android:textSize="18sp"
            android:lineSpacingExtra="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="16sp"
            android:lineSpacingExtra="5dp"
            android:id="@+id/tv_menu_stuff"
            android:padding="10dp"
            android:text="蔬菜"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_click"
            android:padding="10dp"
            android:text="做法"
            android:textSize="18sp"
            android:lineSpacingExtra="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.bhz.android.caiyoubang.view.ScrollListView
            android:clickable="true"
            android:id="@+id/list_menu_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.bhz.android.caiyoubang.view.ScrollListView>
        <TextView
            android:text="小贴士"
            android:padding="10dp"
            android:textSize="18sp"
            android:lineSpacingExtra="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/menu_tips_content"
            android:text="小贴士内容"
            android:textSize="16sp"
            android:lineSpacingExtra="5dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>
</ScrollView>